  <div class='Message'>
    <div class='UpperMessage'>
      <div class='message-user'>
        <%= message.user.name%>
      </div>
      <div class='MessageDate'>
        <%= l message.created_at%>
      </div>
    </div>
    <div class='LowerMeesage'>
      <div class='MessageContent'>
        <%= message.content%>
      </div>
      <div class="MessageImage">
        <%= image_tag message.image.variant(resize:'500x500').processed, class: 'MessageImage' if message.image.present?%>
      </div>
    </div>
  </div>