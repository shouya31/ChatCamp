<div class='wrapper'>

  <div class='side-bar'>
    <%= render "side"%>
  </div>

  <div class='chat'>
    <div class='header'>
      <div class='left-header'>
        <div class='left-header__title'>
          <%= @room.name %>
          <ul class='left-header__members'>
            Member：
            <% @room.users.each do |user| %>
            <li class='member'>
              <%= user.name%>
            </li>
            <% end %>
          </ul>
        </div>

      </div>
      <div class='right-header'>
        <div class="create-chat">
          <%= link_to "チャットを作成する", new_room_path %>
        </div>
        <div class='right-header__button'>
          <%= link_to "チャットを終了する", room_path(@room), method: :delete %>
        </div>
      </div>
    </div>
    <div class='messages'>
      <%= render @messages%>
    </div>
    <%= form_with model: [@room, @message], html: {class: "form"}, local: true do |f|%>

    <%= f.text_field :content, class: 'form__message', placeholder: 'type a message' %>
    <div class='form__mask'>
      <%= f.label :image, class: 'form__mask__image' do %>
      <span class="image_file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
      <% end %>
    </div>
    <%= f.submit 'Send', class: 'form__submit' %>
    <% end %>
  </div>
</div>