<div class='header'>
  <h3 class='header__name'>
    <%= link_to edit_user_path(current_user) do %>
    <%= current_user.name %>
    <% end %>
  </h3>
</div>
<div class='groups'>
  <% current_user.rooms.each do |room| %>
  <div class='group'>
    <div class='group__name'>
      <%= link_to room.name, room_messages_path(room) %>
    </div>
  </div>
  <% end %>
</div>